<img src="/assets/img/burger.png">

<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-3">
      <h3>Ready-to-eat Burgers:</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <ol>{{burger_name}}<button class="devour" value={{id}}>eat-da-burger</button></ol>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-3">
      <h3>Devoured Burgers:</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <ol>{{burger_name}}</ol>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>





<form class="create-form">


  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>